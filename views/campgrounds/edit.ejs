<% include ../assets/header %>
<div class="container">
    <div class="row">
<form action="/campsites/<%= hotel._id %>?_method=PUT" method="POST">
    <h1 style="text-align: center; color:white;">Edit Hotel details</h1>
    <div style="width: 30%; margin:30px auto;">
     <div class="form-group">  
     <input class="form-control" type="text" name="hotel[name]" value="<%= hotel.name %>">
     </div>
     <div class="form-group">  
        <input class="form-control" type="text" name="hotel[price]" value="<%= price.name %>">
        </div>
     <div class="form-group">     
     <input class="form-control" type="text" name="hotel[image]" value="<%= hotel.image %>"> 
     </div>
      <div class="form-group">     
     <input class="form-control" type="text" name="hotel[description]" value="<%= hotel.description %>""> 
     </div>
     <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">submit</button>
    </div>
        <a href="/campsites">go back</a>
    </div>

</form>
</div>
</div>
